.container{
  width: 100%;
}
.detailHead{
  height: 80rpx;
  padding: 20px;
  border-bottom: 1px solid #f5f5f5;
}
.detailHead .avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
  float: left;
}
.detailHead .uinfo{
  width: 300rpx;
  float: left;
  padding-left: 30rpx;
  color: #666;
  font-size: 30rpx;
}
.detailTitle{
  font-size: 38rpx;
  color: #333;
  padding: 30rpx;
}
.tinfo{
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #666;
}
.tinfo .data{
  padding-left: 30rpx;
}
.tinfo .group{
  float: right;
  display: inline-block;
}
.context{
  padding: 30rpx;
  font-size: 34rpx;
  color: #666;
}