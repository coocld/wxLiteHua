.container{
  width: 100%;
}
.detailHead{
  height: 80rpx;
  padding: 20px;
  border-bottom: 1px solid #f5f5f5;
}
.detailHead .avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
  float: left;
}
.detailHead .uinfo{
  width: 300rpx;
  float: left;
  padding-left: 30rpx;
  color: #666;
  font-size: 30rpx;
}
.detailTitle{
  font-size: 38rpx;
  color: #333;
  padding: 30rpx;
}
.tinfo{
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #666;
}
.tinfo .data{
  padding-left: 30rpx;
}
.tinfo .group{
  float: right;
  display: inline-block;
  color: #00923f;
}
.context{
  padding: 30rpx;
  font-size: 34rpx;
  color: #666;
}
.context .main{
  width: 100%;
  overflow: hidden;
}
.reply{
  padding: 30rpx;
  padding-bottom: 100rpx;
}
.replyHead{
  height: 30rpx;
  border-bottom: 1px solid #f5f5f5;
  font-size: 30rpx;
  color: #9e9e9e;
  position: relative;
}
.replyHead .title{
  width: 130rpx;
  text-align: center;
  border-bottom: 1px solid #00923f;
  position: absolute;
  top: -13rpx;
}
.replyList{
  margin-top: 20rpx;
}
.replyItem{
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.replyItem .itemHead{
  height: 55rpx;
}
.replyItem .itemHead .avatar{
  width: 55rpx;
  height: 55rpx;
  border-radius: 100%;
  float: left;
}
.replyItem .itemHead .reyname{
  width: 200rpx;
  float: left;
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #666;
  position: relative;
  top: -10rpx;
}
.replyItem .itemHead .leve{
  font-size: 24rpx;
  color: #9e9e9e;
}
.replyItem .itemHead .floor{
 float: right;
 font-size: 24rpx;
 color: #9e9e9e;
}
.replyItem .itemCont{
  padding: 30rpx;
  color: #333;
  font-size: 34rpx;
}
.replyItem .itemBot{
  height: 30rpx;
  color: #9e9e9e;
  font-size: 24rpx;
}
.replyItem .itemBot .datatime{
  padding-right: 10rpx;
}
.replyItem .itemBot .replyComm{
  float: right;
  color: #00923f;
}
.club_quote {
    background: #FAFAFA;
    margin: 5rpx 0 10rpx 0;
    font-size: 24rpx;
    padding: 20rpx;
}
.club_quote div {
    display: inline-block;
    padding: 10rpx 80rpx;
}
.club_break {
    display: none;
}
.bottomTab{
  width: 100%;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  min-height: 100rpx;
  box-shadow:0px -2px 1px #FAFAFA;
  background: #fff;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  background: #fff;
}
.replyFormCont{
  width: 600rpx;
  float: left;
}
.replyFormCont textarea{
  width: 550rpx;
  text-align: left;
  border: 1px solid #f5f5f5;
  margin: 10rpx 20rpx;
  line-height: 34rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
}
.bottomTab .repBtn{
  width: 150rpx;
  float: right;
  height: 100rpx;
  line-height: 100rpx;
}
.bottomTab .repBtnc{
  width: 150rpx;
  float: right;
  height: 100rpx;
  line-height: 100rpx;
  background: #00923f;
  color: #fff;
}
.moreText{
  text-align: center;
  color: #666;
  font-size: 30rpx;
  padding:40rpx; 
}
.detailBotm{
  text-align: center;
  padding: 60rpx 0 0 0;
  color: #999;
}
.detailBotm .replyNum{
  padding: 0 100rpx;
}
.likec{
  color: #00923f
}