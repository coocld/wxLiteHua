/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.authBtn{
  width: 90%;
  margin: 0 auto;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
}
.logo{
  width: 150rpx;
  height: 250rpx;
  text-align: center;
  margin: 50rpx auto;
}
.logoimg{
  width: 150rpx;
  height: 150rpx;
  border-radius:20rpx;
}
.desc{
  text-align: center;
  color: #666;
  padding: 30rpx 0;
  font-size: 28rpx;
}
.userItem{
  height: 80rpx;
  line-height: 80rpx;
  padding:5rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
  color: #666;
  font-size: 34rpx;
}
.myGroupItem{
  width: 100%;
  height: 80rpx;
} 
.rightIcon{
  display: inline-block;
  float: right;
  width: 30rpx;
  height: 30rpx;
  background: url('https://www.cnnma.com/public/right.png') no-repeat;
  background-size: 100% 100%;
  position: relative;
  top: 30rpx;
}
.busItem{
  font-size: 30rpx;
}