.container{
  border-top: 1px solid #f0f0f0;
  width: 100%;
  overflow: hidden;
  background: #ebebeb;
}
 .addbus{
 }
.input_view{
  display: flex;
  padding: 10px;
  font-size: 28rpx;
}
.img_view{
  display: flex;
  background: #f5f5f5;
  padding: 10rpx;
  flex-direction: row;
  align-items: flex-start;
}
.toWrite {
  width:100%;
  height:60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  display: block;
  border-radius: 5rpx;
  background-color: #cdcdcd;
  opacity: 0.7;
  margin: 30rpx auto 0 auto;
}

.credtextcon{
  padding: 10rpx;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 5rpx;
}
.addBusBtn{
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 30rpx auto;
  font-size: 36rpx;
}
.addThumbBtn{
  height: 130rpx;
  background: #fff;
  padding: 10rpx 30rpx;
}
.busThumb{
  width: 130rpx;
  height: 130rpx;
  border-radius: 100%;
  float: left;
}
.busThumbtext{
  width: 300rpx;
  height: 130rpx;
  line-height: 130rpx;
  padding-left: 40rpx;
  font-size: 34rpx;
  color: #666;
}
.moreright{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-top: 40rpx;
}
.addbusitem{
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx;
}
.addbustitle{
  height: 60rpx;
  border-left: 3px solid #00923f;
  padding-left: 30rpx;
  font-size: 36rpx;
}
.businpitem{
  height: 70rpx;
  border-bottom: 1px solid #f5f5f5;
  font-size: 30rpx;
  padding: 10rpx 0;
}
.businpitem .lable{
  width: 200rpx;
  float: left;
  line-height: 70rpx;
}
.businpitem .inp{
  width: 300rpx;
  float: left;
  height: 40rpx;
  border: 1px solid #f0f0f0;
  display: block;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}