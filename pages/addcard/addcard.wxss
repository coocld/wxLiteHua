.container{
  border-top: 1px solid #f0f0f0;
  width: 100%;
  overflow: hidden;
}
 .addcard{
   padding: 20rpx;
 }
.input_view{
  display: flex;
  padding: 10px;
  font-size: 28rpx;
}
.img_view{
  display: flex;
  background: #f5f5f5;
  padding: 10rpx;
  flex-direction: row;
  align-items: flex-start;
}
.toWrite {
  width:70rpx;
  height:70rpx;
  display: block;
  border-radius: 50%;
  background-color: #cdcdcd;
  opacity: 0.7;
  z-index: 999;
  border: 2rpx white solid;
  box-shadow: 0rpx 0rpx 2rpx #f0f0f0;
  float: left;
  margin: 10rpx 0 0 10rpx;
}
.cardTitle{
  height: 90rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  background: #f5f5f5;
  padding: 0 20rpx;
  line-height: 90rpx;
  border-radius: 5rpx;
}
.cardTitleinput{
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
}
.credtextcon{
  padding: 10rpx;
  margin-top: 20rpx;
  background: #f5f5f5;
  border-radius: 5rpx;
}
.cardbot{
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1px solid #cdcdcd;
  background: #fff;
  z-index: 99;
}
.addCardBtn{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  float: right;
  margin: 10rpx 10rpx 0 0;
  font-size: 36rpx;
}